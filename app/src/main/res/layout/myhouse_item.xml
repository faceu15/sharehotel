<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="110dp"
              android:layout_marginBottom="10dp"
              android:orientation="horizontal">


    <ImageView
        android:id="@+id/iv_myhouse_photo"
        android:layout_width="96dp"
        android:layout_height="110dp"
        android:scaleType="fitXY"
        android:src="@mipmap/collection1"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/tv_myhouse_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="6dp"
            android:text="桂林象山景区江景房"
            android:textColor="#000000"
            android:textSize="8pt"/>

        <TextView
            android:id="@+id/tv_myhouse_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="象山区民主路1号"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="租金："
                />

            <TextView
                android:id="@+id/tv_myhouse_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1780"
                android:textColor="@color/money_color"
                android:textSize="8pt"/>

            <TextView
                android:id="@+id/tv_find_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="元/月"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_myhouse_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:text="整租"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"/>

            <TextView
                android:id="@+id/tv_myhouse_housetype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1室0厅1卫"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"/>

            <TextView
                android:id="@+id/tv_myhouse_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="35"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="M²"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp">


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_myhouse_edit"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_above="@id/btn_myhouse_rental"
            android:layout_alignParentRight="true"
            android:background="@drawable/activity_collection1_btn1_shape"
            android:text="编辑"
            android:textSize="8pt"
            android:textColor="#4065e1"/>

        <Button
            android:id="@+id/btn_myhouse_rental"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/activity_collection1_btn1_shape"
            android:text="出租"
            android:textSize="8pt"
            android:textColor="#4065e1"/>

    </RelativeLayout>


</LinearLayout>
