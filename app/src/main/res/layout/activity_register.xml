<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#aabdfc"
    android:orientation="vertical"
    tools:context=".activity.RegisterActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_register_back"
            android:layout_width="30dp"
            android:layout_height="28dp"
            android:layout_gravity="center"
            android:src="@mipmap/left_arrow"/>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:text="注册"
        android:textSize="30sp"
        android:textColor="@color/white"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/divider"
        android:orientation="vertical"
        android:showDividers="middle|end">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="手机号"
                android:textColor="@color/white"
                android:textSize="20sp"/>

            <TextView

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/et_register_account"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:inputType="phone"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:hint="输入11位数字"
                android:textColorHint="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="验证码"
                android:textColor="@color/white"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <EditText
                android:id="@+id/et_register_verification"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@null"/>

            <Button
                android:id="@+id/bt_register_verification"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="获取验证码"
                android:textColor="@color/white"
                android:layout_marginRight="10dp"
                android:background="@drawable/requestcode_button_shape"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="设置密码"
                android:textColor="@color/white"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>


            <EditText
                android:id="@+id/et_register_password"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:inputType="textPassword"
                android:background="@null"
                android:hint="6-12位字母、数字"
                android:textColorHint="@color/white"/>

            <ImageView
                android:id="@+id/iv_password_visible"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/eye"/>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/register_btn"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:background="@drawable/login_btn_bg"
        android:layout_gravity="center"
        android:text="注册"
        android:textSize="20sp"
        android:textColor="@color/white"/>


</LinearLayout>