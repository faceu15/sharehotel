<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@mipmap/background_main"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"

                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/main_menu"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/icon_main_menu"/>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.5">

                </LinearLayout>


                <EditText
                    android:id="@+id/main_search"
                    android:layout_width="220dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:background="@mipmap/search_main"
                    android:gravity="center"
                    android:hint="城市：酒店名称"
                    android:inputType="textImeMultiLine"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:paddingEnd="10dp"
                    android:paddingLeft="40dp"
                    android:paddingRight="10dp"
                    android:paddingStart="40dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="8pt"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.5">


                </LinearLayout>


                <ImageView
                    android:id="@+id/main_share"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/icon_main_share"/>

            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"/>

        <ImageView
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:src="@mipmap/icon_main_location"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="北京：中华人民共和国"
            android:textColor="@color/white"
            android:textSize="9pt"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="点击改变位置"
            android:textColor="@color/white"
            android:textSize="7pt"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"/>

        <include layout="@layout/location_date_bottom"/>

    </LinearLayout>


</FrameLayout>