<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/parent_linear_lay"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#f1eeef"
              android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/tool_bar_height"
        android:background="@color/toolbar_color"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/close_iv"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@mipmap/left_arrow1"
                android:padding="5dp"/>


            <TextView
                android:id="@+id/my_collection_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="信用积分"
                android:textColor="@color/toolbar_text_color"
                android:textSize="@dimen/activity_title"/>

            <TextView
                android:id="@+id/record_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:text="记录"
                android:textColor="@color/white"
                android:textSize="16sp"/>


        </LinearLayout>


    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/toolbar_color"></LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="80dp"
                android:background="@mipmap/circle"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:text="当前可用积分"
                    android:textColor="#7c63e7"
                    android:textSize="12sp"/>


                <TextView
                    android:id="@+id/credit_score_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="800"
                    android:textColor="#7c63e7"
                    android:textSize="70sp"/>


                <TextView
                    android:id="@+id/ke_di_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="可抵：￥8.00"
                    android:textColor="#7c63e7"
                    android:textSize="12sp"/>


                <Button
                    android:id="@+id/user_btn"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:background="@mipmap/circle_bg"
                    android:layout_marginTop="30dp"
                    android:text="去使用积分"
                    android:textColor="#fdfefe"

                    />


            </LinearLayout>

        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:text="关于积分"
                android:textColor="#908e8f"
                android:textSize="12sp"/>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:src="@mipmap/down"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>